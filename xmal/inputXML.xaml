<Window x:Class="WindowsUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chris Titus Tech's Windows Utility" Height="800" Width="1280" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <DockPanel>
            <ToggleButton Content="Install" Margin="5" Background="DarkGray" Foreground="White" FontWeight="Bold"/>
            <ToggleButton Content="Tweaks" Margin="5" Background="DarkGray" Foreground="White" FontWeight="Bold"/>
            <ToggleButton Content="Config" Margin="5" Background="DarkGray" Foreground="White" FontWeight="Bold"/>
            <ToggleButton Content="Updates" Margin="5" Background="DarkGray" Foreground="White" FontWeight="Bold"/>
            <ToggleButton Content="MicroWin" Margin="5" Background="DarkGray" Foreground="White" FontWeight="Bold"/>
        </DockPanel>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentStackPanel">
                <!-- Buttons will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
